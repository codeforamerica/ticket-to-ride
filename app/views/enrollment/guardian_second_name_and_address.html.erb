<%= render 'enrollment/navigation' %>
<div class="enrollment-form">
  <div class="instructions">Tell us about <%= @student.first_name %>'s family.</div>

<%= form_for(Guardian.new, url: wizard_path, method: :put, id: 'editable-fields') do |g| %>
    <div>
        <table>
          <tr><td colspan="2"><span>Does <%= @student.first_name %> have another parent, legal guardian or caregiver?</span> 
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary">
                    <input type="radio" name="has_additional_guardian" value="true">Yes</label>
                <label class="btn btn-primary">
                    <input type="radio" name="has_additional_guardian" value="false">No</label>
            </div></td></tr>

          <tr><td class="row-break"><span>First Name:</span> <span><%= g.text_field :first_name, class: 'enrollment-form-input', id: 'guardian_firstname', placeholder: 'Roger', required: true %></span></td><td><span>Last Name:</span> <%= g.text_field :last_name, class: 'enrollment-form-input', id: 'guardian_lastname', placeholder: 'Williams', required: true %></span></td></tr>
          <tr><td class="padding-right" colspan="2">Relationship to <%= @student.first_name %>: <a href="#" class="enrollment-form-popover" data-toggle="modal" data-target="#guardian1RelationshipModal" id="guardian1RelationshipSelected">Choose</a></td></tr>
          <tr><td colspan="2">How often does <%= @student.first_name %> live with this individual? </td></tr>
          <div class="guardian1_alt_address">
            <tr>
              <td class="row-break" colspan="2"><span>Street address:</span> <span><%= g.text_field :mailing_street_address_1, class: 'enrollment-form-input', id: 'guardian_street_address_1', placeholder: '456 Newport Avenue' %></span> </td>
            </tr>
            <tr>
              <td colspan="2"> <span>City:</span><span><%= g.text_field :mailing_street_address_2, class: 'enrollment-form-input', id: 'guardian1_city', placeholder: 'Newport' %></span>, RI
              <%= g.text_field :mailing_zip_code, class: 'enrollment-form-input', id: 'guardian_zip_code', placeholder: '02840' %></span></span>
              </td>
            </tr>
          </div>

      </table>
    </div>

    <ul class="pager">
      <li><%= link_to "Previous", previous_wizard_path %></li>
      <li><%= g.submit 'Next', class: 'nav-button pull-right' %></li>
    </ul>

<div class="modal fade" id="guardian1RelationshipModal" tabindex="-1" role="dialog" aria-labelledby="guardian1RelationshipModal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title" id="firstLanguageLabel">How are you related to <%= @student.first_name %>?</h4>
      </div>
      <div class="modal-body single-col-modal">
        <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-primary">
          <%= g.radio_button :relationship, 'Mother' %>Mother
        </label><br/>
        <label class="btn btn-primary">
          <%= g.radio_button :relationship, 'Father' %>Father
        </label><br/>
        <label class="btn btn-primary">
          <%= g.radio_button :relationship, 'Guardian' %>Guardian
        </label><br/>
        <%= g.text_field :relationship, class: 'enrollment-form-input', id: 'other_relationship', placeholder: 'Other' %>
        <br/>
        </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <button type="button" id="btnGuardian1Relationship" class="nav-button pull-right" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>

<%= render 'shared/scenery_guardian' %>