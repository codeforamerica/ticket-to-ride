                  <label class="btn btn-primary">
                    <%= p.radio_button :receives_sms, 'Landline' %>No texts</label>

                </div>
              </td>
            </tr>
        <% end %>

        <!-- TODO Phone number: This isn't going work as is, but is a placeholder so that front-end stuff can continue -->
        <%= fields_for(PhoneNumber.new) do |p| %>
            <tr>
              <td><span>Secondary phone:</span>
                <span><%= p.telephone_field :number, class: 'enrollment-form-input', id: 'guardian_alt_phone', priority_level: 'secondary', placeholder: '401-222-3333' %></span>
              </td>
              <td>
                <div class="btn-group pull-right" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <%= p.radio_button :receives_sms, 'Cell' %>Accepts texts</label>
                  <label class="btn btn-primary">
                    <%= p.radio_button :receives_sms, 'Landline' %>No texts</label>
                </div>
              </td>
        <% end %>
        </tr>

        <!-- TODO Phone number: This isn't going work as is, but is a placeholder so that front-end stuff can continue -->
        <%= fields_for(PhoneNumber.new) do |p| %>
            <tr>
              <td><span>Work phone:</span>
                <span><%= p.telephone_field :number, class: 'enrollment-form-input', priority_level: 'work', id: 'guardian_alt_phone', placeholder: '401-333-4444' %></span>
              </td>
              <td>
                <div class="btn-group pull-right" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <%= p.radio_button :receives_sms, 'Cell' %>Accepts texts</label>
                  <label class="btn btn-primary">
                    <%= p.radio_button :receives_sms, 'Landline' %>No texts</label>
                </div>
              </td>
        <% end %>
        </tr>
        <tr>
          <td colspan="2"><span>Email address:</span>
            <span><%= g.email_field :email, class: 'enrollment-form-input', id: 'guardian_email', placeholder: 'abc@email.com', pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %></span>
          </td>
        </tr>

