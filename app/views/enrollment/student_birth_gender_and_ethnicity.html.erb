<div class="madlib">
  <div class="instructions">Tell us more about <%= @student.first_name %>.</div>
</div>

<%= form_for(@student, url: wizard_path, method: :put) do |s| %>

<div><%= @student.first_name %> was born on <span><%= s.date_field :birthday, class: 'madlib-input', id: 'student_birthday' %></span> in <span><%= s.text_field :birth_city, class: 'madlib-input', id: 'student_birth_city', placeholder: 'City' %></span>
  <%= s.text_field :birth_state, class: 'madlib-input', id: 'student_birth_state', placeholder: 'State' %></span><%= s.text_field :birth_country, class: 'madlib-input', id: 'student_birth_country', placeholder: 'Country' %></span></div>
  <div><a href="#" id="a_student_gender" data-title="He or She?" data-emptytext="( She )" data-type="select" data-placement="top"></a> <a href="#" id="a_student_is_hispanic" data-title="Is <%= @student.first_name %> Hispanic?" data-emptytext="( is )" data-type="select" data-placement="top"></a>
    of Hispanic or Latin descent and identifies as
    <a href="#" id="a_student_race_race" data-title="Races <%= @student.first_name %> identifies as:" data-emptytext="(Asian)" data-type="select" data-placement="top"></a>.
</div>

    <div id="hidden-form-fields">
      <%= s.text_field :birthday %>
      <%= s.text_field :birth_country %>
      <%= s.text_field :gender %>
      <%= s.text_field :is_hispanic %>

      <%= fields_for StudentRace.new do |r|%>
        <%= r.text_field :race %>
      <% end %>
      <!-- TODO: Return to figure out how to populate student race -->
    </div>

    <ul class="pager">
      <li><%= link_to "Previous", '/enrollment' %></li>
      <li><%= s.submit 'Next', class: 'nav-button pull-right' %></li>
    </ul>

<% end %>

<%= render 'shared/scenery_student' %>