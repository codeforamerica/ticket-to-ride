<%= render 'enrollment/navigation' %>
<%= render 'enrollment/contact_person_errors' %>

<div class="enrollment-form">
  <div class="instructions">Tell us about the people who can find you in case of an emergency.</div>
  <!-- TODO: Add tooltip saying this is other than the parent/guardians -->

  <%= form_for(@contact_person, url: wizard_path, method: :put) do |c| %>
      <table>
        <tr>
          <td class="row-break"><span>First Name:</span>
            <span><%= c.text_field :first_name, class: 'enrollment-form-input', placeholder: 'John', required: true %></span>
          </td>
          <td>
            <span>Last Name:</span>
            <span><%= c.text_field :last_name, class: 'enrollment-form-input', placeholder: 'Lennon', required: true %></span>
          </td>
        </tr>
        <tr>
          <td class="padding-right" colspan="2">Contact's relationship to you:
            <a href="#" class="enrollment-form-popover" data-toggle="modal" data-target="#contact1RelationshipModal" id="guardian1RelationshipSelected">Choose</a>
          </td>
        </tr>

            <tr>
              <td class="row-break"><span>Main phone:</span>
                <span><%= c.telephone_field :main_phone, class: 'enrollment-form-input', placeholder: '401-111-2222', required: true %></span>
              </td>
              <td>
                <div class="btn-group pull-right" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <%= c.radio_button :main_phone_can_sms, true %>Accepts Texts</label>
                  <label class="btn btn-primary">
                    <%= c.radio_button :main_phone_can_sms, false %>No Texts</label>
                </div>
              </td>
            </tr>

            <tr>
              <td><span>Secondary phone:</span>
                <span><%= c.telephone_field :secondary_phone, class: 'enrollment-form-input', placeholder: '401-111-2222' %></span>
              </td>
              <td>
                <div class="btn-group pull-right" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <%= c.radio_button :secondary_phone_can_sms, true %>Accepts Texts</label>
                  <label class="btn btn-primary">
                    <%= c.radio_button :secondary_phone_can_sms, false %>No Texts</label>
                </div>
              </td>
            </tr>
        <tr>
          <td colspan="2"><span>Email address:</span>
            <span><%= c.email_field :email, class: 'enrollment-form-input', id: 'contact1_email', placeholder: 'john@email.com', pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %></span>
          </td>
        </tr>

      </table>
      </div>

      <ul class="pager">
        <li><%= link_to "Previous", previous_wizard_path %></li>
        <li><%= c.submit 'Next', class: 'nav-button pull-right' %></li>
      </ul>

  <% end %>

  <%= render 'shared/scenery_contact' %>