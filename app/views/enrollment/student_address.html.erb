<%= render 'enrollment/navigation' %>
<div class="enrollment-form">

  <%= render 'enrollment/student_errors' %>

  <%= form_for(@student, url: wizard_path, method: :put) do |s| %>
    <div class="student_table enableZindex">
      <table>
        <tr>
          <td><span class="instructions"><%= @student.first_name %>'s Home Address</span></td>
        </tr>
        <tr>
          <td class="row-break" colspan="2"><span>Street address 1<sup>*</sup></span>
            <span><%= s.text_field :street_address_1, class: 'enrollment-form-input', id: 'student_address_1', placeholder: '123 Providence Way', required: true %></span>
          </td>
        </tr>
        <tr>
          <td colspan="2"><span>Street address 2 &nbsp;</span>
            <span><%= s.text_field :street_address_2, class: 'enrollment-form-input', id: 'student_address_2', placeholder: 'Apt. 5B' %></span>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <span>City<sup>*</sup></span><span><%= s.text_field :city, class: 'enrollment-form-input city_input', id: 'student_city', placeholder: 'Providence', required: true, pattern: '^[a-zA-Z\u0080-\u024F\s\/\-\)\(\`\.\"\']+$' %></span>,
            RI
            <%= s.text_field :zip_code, class: 'enrollment-form-input zip_input', id: 'student_zip_code', placeholder: '02905', required: true, pattern: '\d{5}(0' %></span></span>
          </td>
        </tr>
      </table>
    </div>

      <ul class="pager pagerZindex">
        <li><%= link_to "Previous", previous_wizard_path %></li>
        <li><%= s.submit 'Next', class: 'nav-button pull-right' %></li>
      </ul>
  </div>

  <% end %>

  <%= render 'shared/scenery_student' %>