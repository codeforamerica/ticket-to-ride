<%= render 'enrollment/navigation' %>
<div class="enrollment-form">

  <div class="instructions">Previous Schooling</div>

  <%= render 'enrollment/student_errors' %>

<%= form_for(@student, url: wizard_path, method: :put) do |s| %>

    <table>
      <tr><td colspan="2" class="row-break"><span>What grade level has <%= @student.first_name %> most recently completed?</span> 
        <div class="btn-group" data-toggle="buttons">
          <% EnrollmentController::GRADES_IN_ORDER.each do |previous_grade| %>
            <label class="btn btn-primary">
                <%= s.radio_button :previous_grade_id, previous_grade.id %><%= t('grade_' + previous_grade.code + '_abbrev') %>
            </label>
          <% end %>
        </div></td></tr>

      <tr>
        <td colspan="2"><span>Prior school:</span><span><%= s.text_field :prior_school_name, class: 'enrollment-form-input', id: 'student_previous_school', placeholder: 'Lighthouse Elementary' %></span>
      </tr>

      <tr>
        <td colspan="2">Prior school city and state: <span><%= s.text_field :prior_school_city, class: 'enrollment-form-input', id: 'student_previous_school_city', placeholder: 'New Shoreham' %></span>, 
  <%= s.text_field :prior_school_state, class: 'enrollment-form-input', id: 'student_previous_school_state', placeholder: 'RI' %></span></td>
      </tr>
    </table>

    <ul class="pager">
      <li><%= link_to "Previous", '/enrollment' %></li>
      <li><%= s.submit 'Next', class: 'nav-button pull-right' %></li>
    </ul>

  <% end %>
</div>

<%= render 'shared/scenery_student' %>

