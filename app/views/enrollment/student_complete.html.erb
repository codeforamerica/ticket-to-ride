<%= render 'enrollment/navigation' %>
<div class="enrollment-form">
  <div>
    Congrats! You've completed the first section of <span class="edited_text"><%= @student.first_name %></span>'s registration.
    In the next section you will fill out information about yourself.
  </div>
</div>

<%= form_for(@student, url: wizard_path, method: :put) do |s| %>
    <ul class="pager">
      <li><%= link_to "Previous", previous_wizard_path %></li>
      <li><%= s.submit 'Next', class: 'nav-button pull-right' %></li>
    </ul>
<% end %>

<%= render 'shared/scenery_student_confirmation' %>