<%= form_tag(controller: 'admin', action: 'central_start', method: 'post') do %>

    <div>
        <%= label_tag 'admin_name', 'Name' %>
        <%= text_field_tag(name: 'admin_name') %>
    </div>

    <div>
        <%= label_tag 'admin_email', 'E-mail address' %>
        <%= text_field_tag(name: 'admin_email') %>
    </div>

    <div>
        <%= label_tag 'admin_password', 'Password' %>
        <%= password_field_tag 'admin_password' %>
    </div>

    <div>
        <%= label_tag 'admin_password_confirm', 'Confirm Password' %>
        <%= password_field_tag 'admin_password_confirm' %>
    </div>

    <%= submit_tag 'Login' %>
<% end %>