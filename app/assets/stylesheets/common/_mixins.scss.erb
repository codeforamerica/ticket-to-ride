// Breakpoints
  $smallest: 320px;
  $small: 480px;
  $medium: 780px;
  $large: 980px;
  $x-large: 1200px;

  @mixin screen($size) {
    @if $size == wide-phone-up {
      @media only screen and (min-width: $small) { @content; }
    }
    @else if $size == tablet-up {
      @media only screen and (min-width: $medium) { @content; }
    }
    @else if $size == desktop-up {
      @media only screen and (min-width: $large) { @content; }
    }
    @else if $size == big-desktop {
      @media only screen and (min-width: $x-large) { @content; }
    }
    @else if $size == phone-only {
      @media only screen and (max-width: $medium - 1) { @content; }
    }
    @else if $size == small-phone-only {
      @media only screen and (max-width: $small - 1) { @content; }
    }
    @else if $size == wide-phone-only {
      @media only screen and (min-width: $small) and (max-width: $medium - 1) { @content; }
    }
    @else if $size == tablet-only {
      @media only screen and (min-width: $medium) and (max-width: $large - 1) { @content; }
    }
    @else if $size == desktop-only {
      @media only screen and (min-width: $large) and (max-width: $x-large - 1) { @content; }
    }
    @else if $size == print {
      @media print { @content; }
    }
  } 

