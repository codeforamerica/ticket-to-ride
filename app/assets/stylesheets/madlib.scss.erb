@import "common/variables";

div.container header{
	position: absolute;
	left: -20px;
	top: 10px;
	height: 155px;
	width: 226px;
	
}

.madlib,
ul.pager{
  max-width: 960px;
  margin: 0 auto;
  font-size: 200%;
  line-height: 175%;
}

.madlib{
	margin-top: 3em;	
  padding-left: 3%;
}

.madlib_para {
  margin-bottom: 3%;
}

.madlib div .row {
  margin-bottom: 1%;
}

.madlib div .col-lg-6 {
  margin-bottom: 1%;
}

.madlib a:hover {
  text-decoration: none;
}

.namespace {
  font-size: 1%;
}

.instructions {
  font-size: 56%;
  font-weight: 400; 
  color: $george-harrison;
  line-height: 145%;
  margin-bottom: 2%;
  margin-top: -6%;
}

.student-info-container{
  display: inline;
}

.pseudo-tooltip {
  color: $paul-mccartney;
  border-bottom: 3px dotted $paul-mccartney;
}

a.editable-click {
  color: $yoko-ono;
  border-color: $yoko-ono;
}

.input-small {
  max-width: 150px;
}

.madlib-title{
  font-size:50%;
}

.madlib-input{
  font-size:50%;
  max-height: 100px;
}

.popOverClass {
  max-height: 125px;
}

.pager {
	position: relative;
	z-index: 1;
	text-align: left;
	padding-top: 1em;
}

.pager li{
	float: left;
	line-height: 1.5;
}

.pager li:last-of-type{
	float: right;
}


.pager li > a,
.nav-button {
	display: block;
  background-color: $paul-mccartney;
  color: white;
  border-radius: 4px;
  font-size: 14px;
  border: none;
  height: 2em;
  line-height: 1.4em;
  	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
    min-width: 6em;

}

.pager li > a:hover,
.nav-button:hover {
  background-color: #549448;
}

#hidden-form-fields {
    display: none;
}

.editable-empty, .editable-empty:hover, .editable-empty:focus {
  color: $john-lennon;
  font-style: normal;
}

.editable-click, a.editable-click  {
  border-bottom: dashed 2px $george-harrison;
  margin-right: 8px;
}

.editable-unsaved {
  color: #6aba5b !important;
}

a.editable-click:hover {
  border-bottom: dashed 2px $paul-mccartney;
  margin-right: 8px;
}

.edited_text {
  color: $john-lennon;
  font-family: $with-the-beatles;
  font-weight: 700;
}


/* content editable */
.madlib-editable {
  display: inline;
  border-bottom: 1px dashed $paul-mccartney;
  // background-color: gray;
  // opacity: 80%;
  color: $paul-mccartney;
  font-weight: 700;
  padding-right: 8px;
  padding-left: 8px;
}

