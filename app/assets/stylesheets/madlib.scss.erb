@import "common/variables";

.madlib{
  max-width: 960px;
  margin: -8% 30% 5%;
  width: 62%;
  font-size: 200%;
  line-height: 175%;
  min-height: 173px;
}

.madlib div {
  margin-bottom: 5%;
}

.madlib a:hover {
  text-decoration: none;
}

.namespace {
  font-size: 1%;
}

.instructions {
  font-size: 67%;
  font-weight: 400; 
  color: $george-harrison;
  line-height: 130%;
  margin-bottom: 2%;
}

.beatle-madlib{
  max-width: 960px;
  margin: 2% 30%;
  width: 62%;
  font-size: 150%;
  line-height: 175%;
  min-height: 273px;
}

.student-info-container{
  display: inline;
}

.pseudo-tooltip {
  color: $paul-mccartney;
  border-bottom: 3px dotted $paul-mccartney;
}

a.editable-click {
  color: $paul-mccartney;
  border-color: $paul-mccartney;
}

.input-small {
  max-width: 150px;
}

.madlib-title{
  font-size:50%;
}

.madlib-input{
  font-size:50%;
  max-height: 100px;
}

.popOverClass {
  max-height: 125px;
}


.navigation_buttons *{
  max-width: 50%;
  margin: 1% 10%;
  z-index: 100;
  border: 1px solid blue;
}

.navigation_buttons form .btn{
  display: inline;
  max-width: 100%;
  float: right;

}

.next_student {
  display: inline;
  // margin: 1% 10.5%;
  // z-index: 100;
  // display: inline;
}

.prev_student {
  display: inline;
  // max-width: 960px;
  // margin: 1% 0;
  // z-index: 100;
  // display: inline;
}

.pager {
  margin-left: -7%;
  width: 96%;
}

.pager li * {
  display: block;
  width: 10%;
  padding-left: -10%;

}

.pager li > a {
  background-color: $paul-mccartney;
  color: white;
  border-radius: 4px;
  border: 1px solid $paul-mccartney;
  font-size: 14px;
  line-height: 1.42857143;
}

.pager li > a:hover {
  color: $paul-mccartney;
  background-color: white;
}


