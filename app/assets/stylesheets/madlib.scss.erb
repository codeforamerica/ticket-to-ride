@import "common/variables";

.madlib{
  max-width: 960px;
  margin: -8% 30% 5%;
  width: 62%;
  font-size: 200%;
  line-height: 175%;
  min-height: 173px;
}

.madlib a:hover {
  text-decoration: none;
}

.namespace {
  font-size: 1%;
}

.beatle-madlib{
  max-width: 960px;
  margin: 2% 30%;
  width: 62%;
  font-size: 150%;
  line-height: 175%;
  min-height: 273px;
}

.student-info-container{
  display: inline;
}

.pseudo-tooltip {
  color: $paul-mccartney;
  border-bottom: 3px dotted $paul-mccartney;
}

a.editable-click {
  color: $paul-mccartney;
  border-color: $paul-mccartney;
}

.input-small {
  max-width: 150px;
}

.madlib-title{
  font-size:50%;
}

.madlib-input{
  font-size:50%;
  max-height: 100px;
}

.popOverClass {
  max-height: 125px;
}

.next_student {
  max-width: 960px;
  margin: 1% 10.5%;
  z-index: 100;
}



