@import "common/variables";

.madlib{
  max-width: 960px;
  margin: -8% 30% 5%;
  width: 71%;
  font-size: 200%;
  line-height: 175%;
  min-height: 173px;
}

.madlib_para {
  margin-bottom: 3%;
}

.madlib div .row {
  margin-bottom: 1%;
}

.madlib div .col-lg-6 {
  margin-bottom: 1%;
}

.madlib a:hover {
  text-decoration: none;
}

.namespace {
  font-size: 1%;
}

.instructions {
  font-size: 67%;
  font-weight: 400; 
  color: $george-harrison;
  line-height: 130%;
  margin-bottom: 2%;
}

.beatle-madlib{
  max-width: 960px;
  margin: 2% 30%;
  width: 62%;
  font-size: 150%;
  line-height: 175%;
  min-height: 273px;
}

.student-info-container{
  display: inline;
}

.pseudo-tooltip {
  color: $paul-mccartney;
  border-bottom: 3px dotted $paul-mccartney;
}

a.editable-click {
  color: $paul-mccartney;
  border-color: $paul-mccartney;
}

.input-small {
  max-width: 150px;
}

.madlib-title{
  font-size:50%;
}

.madlib-input{
  font-size:50%;
  max-height: 100px;
}

.popOverClass {
  max-height: 125px;
}

.pager {
  margin-left: -10%;
  margin-top: -1%;
  width: 90%;
  position: absolute;
  z-index: 100;
}

.pager li * {
  // display: block;
  width: 10%;
}

.pager li > a,
.nav-button {
  background-color: $paul-mccartney;
  color: white;
  border-radius: 4px;
  font-size: 14px;
  line-height: 1.42857143;
}

.pager li > a:hover,
.nav-button:hover {
  color: $paul-mccartney;
  background-color: white;
}

#hidden-form-fields {
    display: none;
}


