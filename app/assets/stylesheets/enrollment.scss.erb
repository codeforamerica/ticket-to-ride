@import "common/variables";

div.container header {
  position: absolute;
  left: -20px;
  top: 10px;
  height: 155px;
  width: 226px;
}

.enrollment-form, ul.pager {
  max-width: 960px;
  margin: 0 auto;
  font-size: 150%;
  line-height: 175%;
}

.enrollment-form{
  margin-top: 2em;  
  padding-left: 3%;
}

.enrollment-form_para {
  margin-bottom: 3%;
}

.enrollment-form div .row {
  margin-bottom: 1%;
}

.enrollment-form div .col-lg-6 {
  margin-bottom: 1%;
}

.enrollment-form a:hover {
  text-decoration: none;
}

a.enrollment-form-popover {
  color: $yoko-ono;
  font-size: 95%;
}

a:hover.enrollment-form-popover {
  color: $paul-mccartney;
}

.enrollment-form .btn-primary {
  background-color: $yoko-ono;
  border-color: #FFF;
  color: $john-lennon;
  z-index: 3;
}

.enrollment-form .btn-primary.active {
  background-color: $paul-mccartney;
  color: #FFF;
}

.enrollment-form .col-narrow {
  width: 30%;
}

.enrollment-form .col-wide {
  width: 70%;
}

.enrollment-form .form-group {
  width: 80%;
  padding-top: 1%;
}

.enrollment-form table td {
  vertical-align: text-bottom;
  line-height: 135%;
  padding-bottom: 2.5%;
}

.enrollment-form table td.no-padding {
  padding-bottom: 0;
}

.namespace {
  font-size: 1%;
}

.enrollment-form td {
  margin-right: -10px;
}

.enrollment-form td.padding-right {
  padding-right: 1.5%;
  max-width: 540px;
}

div.enrollment-form .instructions {
  font-size: 68%;
  font-weight: 400; 
  color: $george-harrison;
  line-height: 145%;
  // margin-bottom: -1%;
  margin-top: -2%;
}

.student-info-container{
  display: inline;
}

.pseudo-tooltip {
  color: $paul-mccartney;
  border-bottom: 3px dotted $paul-mccartney;
}



// a.editable-click {
//   color: $yoko-ono;
//   border-color: $yoko-ono;
// }

.input-small {
  max-width: 150px;
}

.enrollment-form-title{
  font-size:50%;
}

.enrollment-form-input{
  font-size:50%;
  max-height: 100px;
}

.popOverClass {
  max-height: 125px;
}

/* ========================== */ 
/*        Hidden divs         */
/* ========================== */


.guardian1_alt_address {
  display: none;
}

/* ========================== */ 
/*    Next & Prev buttons     */
/* ========================== */

.pager {
  position: relative;
  z-index: 1;
  text-align: left;
  padding-top: 1em;
}

.pager li{
  float: left;
  line-height: 1.5;
}

.pager li:last-of-type{
  float: right;
}


.pager li > a,
.nav-button {
  display: block;
  background-color: $paul-mccartney;
  color: white;
  border-radius: 4px;
  font-size: 14px;
  border: none;
  height: 2em;
  line-height: 1.4em;
    -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
    min-width: 6em;

}

.pager li > a:hover,
.nav-button:hover {
  background-color: #549448;
}


/* ========================== */ 
/*                            */
/* ========================== */


.slider.slider-horizontal {
  float: right;
}

.slider-handle {
  background-color: $paul-mccartney;
  background-image: -webkit-linear-gradient(top, #FFF 0%, $paul-mccartney 100%);
  background-image: linear-gradient(to bottom, #FFF 0%, $paul-mccartney 100%);

}
.slider-result {
  font-size: 90%;
  color: $yoko-ono;
  padding-left: 4%;
  vertical-align: text-top !important;
}

.inline-checkboxes {
  display: inline-block;
  font-size: 80%;
  padding-right: 2%;
  margin-top: -5px;
}

.inline-checkboxes label{
  padding-left: 2px;
}

.enrollment-form input[type=checkbox] {
  margin: 9px 0 0;
}

.minimize-padding {
  padding-bottom: 0 !important;
}

#hidden-form-fields {
    display: none;
}

.editable-empty, .editable-empty:hover, .editable-empty:focus {
  color: $john-lennon;
  font-style: normal;
}

.editable-click, a.editable-click  {
  border-bottom: dashed 2px $george-harrison;
  margin-right: 8px;
}

.editable-unsaved {
  color: #6aba5b !important;
}

a.editable-click:hover {
  border-bottom: dashed 2px $paul-mccartney;
  margin-right: 8px;
}

.edited_text {
  color: $john-lennon;
  font-family: $with-the-beatles;
  font-weight: 700;
}

/* content editable */
.enrollment-form-editable {
  display: inline;
  border-bottom: 1px dashed $paul-mccartney;
  // background-color: gray;
  // opacity: 80%;
  color: $paul-mccartney;
  font-weight: 700;
  padding-right: 8px;
  padding-left: 8px;
}

input[type=date] {
  border: 0;
  color: $yoko-ono;
  font-weight: 600;
  border-bottom: 2px dashed $george-harrison;
  width: 38%;
  text-align: center;
}

.enrollment-form-input {
  border: 0;
  color: $paul-mccartney;
  font-weight: 600;
  border-bottom: 2px dashed $george-harrison;
  font-size: 89%;
  margin: 0 1% 0 1%;
  width: 40%;
  text-align: center;
  line-height: 1.5em;
  position: relative;
  top: -7px;
}

.enrollment-form-answered {
  border: 0;
  color: $paul-mccartney;
  font-weight: 600;
  border-bottom: 2px dashed $george-harrison;
  font-size: 89%;
  margin: 1% 1% 0 1%;
  width: 60%;
  text-align: center;
  line-height: 1.5em;
  position: relative;
  top: -7px;
  padding-left: 4%;
  padding-right: 4%;
}


.enrollment-form-popover {
  border: 0;
  padding-left: 5%;
  padding-right: 5%;
  color: $paul-mccartney;
  font-weight: 600;
  border-bottom: 2px dashed $george-harrison;
  margin: 0 1% 0 1%;
  width: 60%;
  text-align: center;
  line-height: 1.5em;
  position: relative;
  top: 0;
  font-size: 100%;
}

.enrollment-form-modal-selection {
  border-bottom: 2px dashed $george-harrison;
  font-weight: 700;
}

.enrollment-form .filler-text {
  font-size: 90%;
  text-transform: uppercase; 
}

.hidden {
  display: none;
}

.row-break {
    padding-top: 1%;
}

form div {
  margin-bottom: 2%;
}

.section-break {
  margin-top: 10%;
}

#student_birth_state {
  width: 11%;
}

#student_address1 {
  width: 17%;
}

button {
  margin-left: 2%;
}

::-webkit-input-placeholder {
   color: $yoko-ono;
}

:-moz-placeholder { /* Firefox 18- */
   color: $yoko-ono;  
}

::-moz-placeholder {  /* Firefox 19+ */
   color: $yoko-ono;  
}

:-ms-input-placeholder {  
   color: $yoko-ono;  
}

/* ========================== */ 
/*        Navigation          */
/* ========================== */

.enrollment-navigation {
  max-width: 960px;
  margin: 1% auto;
  text-align: center;
  color: $ringo-starr;
}


.enrollment-navigation a {
  color: $yoko-ono;
}

.enrollment-navigation a:hover {
  text-decoration: none;
  color: $paul-mccartney;
}

.navigator ol {
  margin-left: -12px;
}

.navigator li {
  display: inline;
  font-size: 80%;
}

.pastCircle {
  display: inline-block;
  border-radius: 50%;
  min-width: 24px;
  max-width: 24px;
  min-height: 24px;
  max-width: 24px;
  background-color: $yoko-ono;
  text-align: center;
  font-size: 70%;
  margin-right: 6px;
  padding: 5px 3px 0 3px;
  color: $john-lennon;
}

.pastCircle a {
  color: #FFF;
}

.pastCircle a:hover {
  color: #FFF;
}

.pastCircle:hover {
  background-color: $paul-mccartney;
}

.currentCircle {
  @extend .pastCircle;
  background-color: $paul-mccartney;
  color: #FFF;
}

.futureCircle {
  display: inline-block;
  border-radius: 50%;
  min-width: 24px;
  max-width: 24px;
  min-height: 24px;
  max-width: 24px;
  background-color: #CCC;
  text-align: center;
  font-size: 70%;
  margin-right: 6px;
  padding: 5px 3px 0 3px;
  color: #FFF;
}
