}

.logo {
  max-width: 226px;
  background-image: url(<%= asset_path 'vintage-logo.png' %>);
  background-size: 229px;
  background-repeat: no-repeat;
  min-height: 155px;
  max-height: 150px;
  top: 1%;
  transform:rotate(-4deg);
  -ms-transform:rotate(-4deg); /* IE 9 */
  -webkit-transform:rotate(-4deg); /* Opera, Chrome, and Safari */
}

