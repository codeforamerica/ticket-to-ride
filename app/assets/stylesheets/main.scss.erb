@import "common/variables";
@import "common/mixins";

div.container-application{

  @include screen(wide-phone-only) {
    padding-left: 100px;
    width: 720px;
  }

  @include screen(tablet-up){
    padding-left: 220px;
    width: 920px; 
  }

	position: relative;
	height: 100%;
	margin: 0 auto;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;

}

body, html {
  height: 100%;
  font-family: $please-please-me;
  font-size: 16px;
  color: $john-lennon;
}

p, h2 {
  font-family: $please-please-me;
}

.logo {
  background-image: url('/assets/vintage-logo.png');
  background-repeat: no-repeat;
  transform:rotate(-4deg);
  -ms-transform:rotate(-4deg); /* IE 9 */
  -webkit-transform:rotate(-4deg); /* Opera, Chrome, and Safari */

  @include screen(wide-phone-only){
    width: 200px;
    height: 129px;
    background-size: 196px;
  }

  @include screen(tablet-up){
    width: 226px;
    height: 155px;
    background-size: 229px;
  }
}

.background {
  position: absolute;
  bottom: 7px;
  z-index: 0;
  opacity: .99;

  @include screen(wide-phone-only){
    left: -60px;
  }

  @include screen(tablet-up){
    left: -80px;
  }

}

.background-welcome {
  position: absolute;
  bottom: 0;
  z-index: 0;
  opacity: .99;

  @include screen(wide-phone-only){
    left: -50px;
    bottom: 0 !important;
  }

  @include screen(tablet-up){
    left: -80px;
  }

}

a {
  color: $paul-mccartney;
}

a:hover {
  color: $yoko-ono;
}
