@import "common/mixins";

.welcome { 

  @include screen(wide-phone-only){
    font-size: 1.2em;
    line-height: 1.6em;
    padding-left: 15%;
    padding-top: 2%;
    padding-bottom: 5%;
  }

  @include screen(tablet-up){
    padding-left: 3%;
    padding-top: 1%;
    font-size: 1.3em; 
    line-height: 1.6em;
  }

}

.welcome p {
  padding-top: 2%;
}

.welcome h2 { 

  margin-top: 5%;

  @include screen(wide-phone-only) {
    font-size: 1.4em;
  }

  @include screen(tablet-up) {
    font-size: 1.6em;
  }

}

.welcome-message {
  margin-top: 2%;
}

.begin_enrollment .btn { 
  font-size: 150%; 
  z-index: 100; 
    position: absolute;
  right: 1%;
}

select#district_url {
  margin-top: 2%;
  margin-bottom: 0;
  font-weight: 400;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  background-image: none;
  border: 1px solid transparent;
  white-space: nowrap;
  padding-top: 20%;
  font-size: 100%;
  line-height: 130%;
  border-radius: 4px;
  -webkit-user-select: none;
  box-sizing: border-box;
  color: #333;
  background-color: #fff;
  border-color: #ccc;
  height: 50px;
}

.go-to-start {
  font-size: 120%;
  z-index: 100;
  margin-top: 2%;
}