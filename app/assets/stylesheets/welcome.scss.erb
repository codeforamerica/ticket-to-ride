@import "common/mixins";

.welcome { 

  @include screen(wide-phone-up){
    font-size: 1.2em;
    line-height: 1.6em;
    padding-left: 10%;
    padding-top: 2%;
  }

  @include screen(tablet-up){
    padding-left: 3%;
    padding-top: 1%;
    font-size: 1.3em; 
    line-height: 1.6em;
  }

}

.welcome p {
  padding-top: 2%;
}

.welcome h2 { 

  @include screen(wide-phone-up) {
    font-size: 1.4em;
  }

  @include screen(tablet-up) {
    font-size: 1.6em;
  }

}

.begin_enrollment .btn { 
  font-size: 150%; 
  z-index: 100; 
    position: absolute;
  right: 1%;
}
