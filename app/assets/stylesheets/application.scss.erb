/* colors */
$john-lennon: #424343; // primary color
$yoko-ono: #565858; // secondary color

body, html {
  height: 100%;
  /*width: 100%;*/
}

@font-face {
  font-family: "Aileron-Black";
  src: url(/assets/fonts/aileron/Aileron-Black.otf) format("truetype");
}

@font-face {
  font-family: "Aileron-Regular";
  src: url(/assets/fonts/aileron/Aileron-Regular.otf) format("truetype");
}

p, h2 {
  font-family: "Aileron-Regular";
  font-size: 90%;
  letter-spacing: 1px;
  color: $john-lennon;
}

.welcome-container {
  /*background-image: url(<%= asset_path 'guardian/trains01.png' %>);*/
  // background: image-url('sailing-three-landscapes.svg') no-repeat 50% 50%,
  background: image-url('guardian/trains01.png') no-repeat,
              image-url('guidepost.png') no-repeat;
              ;
  background-repeat: no-repeat, no-repeat;
  background-position: 100% 100%, left;
  background-size: cover, 90% 90%;
}

.logo {
  max-width: 226px;
  background-image: url(<%= asset_path 'vintage-logo.png' %>);
  background-size: 229px;
  background-repeat: no-repeat;
  min-height: 155px;
  max-height: 150px;
  /*position: absolute;*/
  top: 1%;
  /*position: fixed;*/
  transform:rotate(-4deg);
  -ms-transform:rotate(-4deg); /* IE 9 */
  -webkit-transform:rotate(-4deg); /* Opera, Chrome, and Safari */
}

.welcome {
  max-width: 960px;
	margin: 2% 27%;
	width: 70%;
  margin-top: -14%;
  font-size: 110%;
  line-height: 150%;
}

.begin_enrollment {
	max-width: 960px;
