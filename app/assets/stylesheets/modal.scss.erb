@import "common/mixins";

/* Modals */

.enrollment-modal-select {
  display: inline;
  width: 50%;
  margin-top: -14%;
}

.enrollment-form .modal-title{
  font-size: 70%;
}

.enrollment-form .single-col-modal .btn {
  margin-bottom: 1%;
}

.enrollment-form .single-col-modal .enrollment-form-input{
  margin-top: 2%;
}

.single-col-modal {
  margin: 0 auto;
  padding-left: 11%;
}

.single-col-modal label {
  min-width: 100%;
  max-width: 100%;
}

.single-col-modal a {
  min-width: 100%;
  max-width: 100%;
}

.single-col-modal .enrollment-form-input {
  width: 100%;
}

.single-col-modal-wider {
  margin: 0 auto;
  padding-left: 12%;
}

.single-col-modal-wider label {
  min-width: 220%;
  max-width: 220%;
}

.double-col-modal {
  padding-left: 16%;
}

.single-col-btn-group {
  width: 100%;
}

/* End modals */