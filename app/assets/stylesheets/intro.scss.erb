@import "common/variables";

.landing_page {
  background-image:  url('/assets/landing-background.png') ;
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: -2;
  height: 101%;
  width: 100%;
  // margin-top: -26px;
}

.video_container {
  position: absolute;
  top: 15%;
  left: 35%;
  max-width: 500px;
  max-height: 281px;
  z-index: 5;
}

.intro_button {
  position: relative;
  z-index: 5;
  margin-top: 5%;
}

.intro_footer {
  position: absolute;
  margin-left: 30%;
  margin-right: 30%;
  bottom: 5%;
  min-width: 60%;
}

.intro_footer p{
  text-align: center;
  color: $john-lennon;
  font-size: 80%;
}

.intro_footer a {
  color: $john-lennon;
}

.intro_footer a:hover {
  color: $paul-mccartney;
  text-decoration: none;
}


